<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="@color/colorBackground"
    tools:context=".activity.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="left"/>
                <ImageView
                    android:layout_weight="3"
                    android:onClick="updateInfo"
                    android:background="@drawable/edit"
                    android:layout_width="80dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <Button
                android:textSize="30sp"
                android:id="@+id/btnTour"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Tour Event"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:onClick="tour"
                android:textColor="@color/colorBlack"
                android:background="@drawable/shape1"/>
            <Button
                android:textSize="30sp"
                android:id="@+id/btnListofevent"
                android:onClick="viewEventList"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Event List"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:background="@drawable/shape1"/>
            <Button
                android:textSize="30sp"
                android:id="@+id/btnviewTravelMoment"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travel Moments"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:onClick="travel"
                android:textColor="@color/colorBlack"
                android:background="@drawable/shape1"/>

            <Button
                android:textSize="30sp"
                android:id="@+id/btnNearbyplace"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Near By Place"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:onClick="nearByplace"
                android:textColor="@color/colorBlack"
                android:background="@drawable/shape1"/>


            <Button
                android:textSize="30sp"
                android:id="@+id/btnWeather"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weather Forcasting"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:onClick="weatherMaster"
                android:textColor="@color/colorBlack"
                android:background="@drawable/shape1"/>


        </LinearLayout>


    </ScrollView>

</LinearLayout>
