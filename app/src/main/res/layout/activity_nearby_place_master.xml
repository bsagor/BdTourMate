<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nearby_place_master"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    android:orientation="vertical"

    tools:context="com.akhgupta.easylocation.demo.activity.NearbyPlaceMaster">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="30sp"
            android:id="@+id/btnNearbyplace"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bank"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="bank"
            android:textColor="@color/colorBlack"
            android:background="@drawable/shape1"/>
        <Button
            android:textSize="30sp"
            android:id="@+id/btnWeather"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATM"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="atm"
            android:textColor="@color/colorBlack"
            android:background="@drawable/shape1"/>
        <Button
            android:textSize="30sp"
            android:id="@+id/btnListofevent"
            android:onClick="Hospital"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospital"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/shape1"/>
        <Button
            android:textSize="30sp"
            android:id="@+id/btnviewTravelMoment"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="hotel"
            android:textColor="@color/colorBlack"
            android:background="@drawable/shape1"/>
        <Button
            android:textSize="30sp"
            android:id="@+id/btnshopingmall"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shoping Mall"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="shopingmall"
            android:textColor="@color/colorBlack"
            android:background="@drawable/shape1"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>
