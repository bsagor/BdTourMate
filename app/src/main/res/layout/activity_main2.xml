<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nearby_place_master"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:gravity="center" tools:context=".activity.MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/lpb"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@drawable/shape"
            android:id="@+id/userNameET"
            android:drawableLeft="@color/colorAccent"
            android:textSize="20sp"
            android:drawableStart="@drawable/username"
            android:textAllCaps="true"
            android:inputType="text"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:hint="Uesr name"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/edit"

            android:drawableRight="@drawable/edit" />
        <EditText
            android:layout_marginTop="15dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/passwordET"
            android:background="@drawable/shape"
            android:textSize="20sp"
            android:drawableStart="@drawable/password"
            android:inputType="numberPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/edit"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:drawableRight="@drawable/edit"
            android:drawableLeft="@drawable/password" />
        <LinearLayout
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/jet"
                android:text="Remember Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/rememberCB"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button

                android:textSize="25sp"
                android:id="@+id/btnSignin"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:onClick="signIn"
                android:textColor="@color/jet"
                android:background="@drawable/buttonshape"/>

        </LinearLayout>
        <TextView
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:id="@+id/btnSugnUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No account yet? Sign Up"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="signUp"
            android:textColor="@color/jet"
            />
        <TextView

            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:id="@+id/btnPasswordRetrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot your password?"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="passwordRetrive"
            android:textColor="@color/white"
            />
    </LinearLayout>



</LinearLayout>
