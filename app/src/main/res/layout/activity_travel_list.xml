<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_travel_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="@color/colorBackground"
    tools:context=".activity.TravelList">
    <TextView
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Travel List"
        android:onClick="travelExpense"
        android:layout_width="match_parent"
        android:textColor="@color/colorBlack"

        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:textSize="9dp"
        android:textStyle="bold"
        android:text=" B-> Budget, E->Expended, R->Remain, + Ex->Add expense, V->View expense"
        android:onClick="travelExpense"
        android:layout_width="match_parent"
        android:textColor="@color/colorBlack"

        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="status"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="10dp"/>
 
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ListView
              android:id="@+id/lstTravel"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
          </ListView>
      </LinearLayout>
  
</LinearLayout>
